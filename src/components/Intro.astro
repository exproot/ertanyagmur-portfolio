---
// src/components/Intro.astro
const { personal } = Astro.props;
---

<section class="section text-center">
  <div class="container space-y-6">
    <!-- Avatar -->
    <img
      src={`${import.meta.env.BASE_URL}${personal.avatar}`}
      alt="Avatar"
      class="mx-auto rounded-full object-cover w-32 h-32 sm:w-32 sm:h-32 shadow-md"
      style="aspect-ratio: 609 / 450;"
    />

    <!-- Name & Title -->
    <h1 class="hero-title text-4xl sm:text-5xl font-semibold tracking-tight text-gray-900">
      Hi, I'm {personal.name} <span class="inline-block animate-wave">ðŸ‘‹</span>
    </h1>
    <h2 class="subtitle">{personal.title}</h2>
    <p class="text-base max-w-xl mx-auto">{personal.subtitle}</p>

    <!-- Social Buttons -->
    <div class="flex justify-center gap-4 pt-4">
      <!-- LinkedIn -->
      <a href="https://linkedin.com/in/ertanyagmur" target="_blank" class="group">
        <div class="p-3 rounded-full bg-white shadow transition hover:shadow-md">
          <svg class="w-6 h-6 text-[#0077b5] group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 20 20">
            <path d="M5 3c0 1.062-.71 1.976-2.001 1.976C1.784 4.976 1 4.114 1 3.052C1 1.962 1.76 1 3 1s1.976.91 2 2M1 19V6h4v13zm6-8.556c0-1.545-.051-2.836-.102-3.951h3.594l.178 1.723h.076c.506-.811 1.746-2 3.822-2C17.1 6.216 19 7.911 19 11.558V19h-4v-6.861c0-1.594-.607-2.81-2-2.81c-1.062 0-1.594.86-1.873 1.569c-.102.254-.127.608-.127.963V19H7z"/>
          </svg>
        </div>
      </a>

      <!-- GitHub -->
      <a href="https://github.com/exproot" target="_blank" class="group">
        <div class="p-3 rounded-full bg-white shadow transition hover:shadow-md">
          <svg class="w-6 h-6 text-black group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 64 64">
            <path d="M32 0C14 0 0 14 0 32c0 21 19 30 22 30c2 0 2-1 2-2v-5c-7 2-10-2-11-5c0 0 0-1-2-3c-1-1-5-3-1-3c3 0 5 4 5 4c3 4 7 3 9 2c0-2 2-4 2-4c-8-1-14-4-14-15q0-6 3-9s-2-4 0-9c0 0 5 0 9 4c3-2 13-2 16 0c4-4 9-4 9-4c2 7 0 9 0 9q3 3 3 9c0 11-7 14-14 15c1 1 2 3 2 6v8c0 1 0 2 2 2c3 0 22-9 22-30C64 14 50 0 32 0"/>
          </svg>
        </div>
      </a>

      <!-- Email -->
      <a href="mailto:ertanyagmur@outlook.com" class="group">
        <div class="p-3 rounded-full bg-white shadow transition hover:shadow-md">
          <svg class="w-6 h-6 text-[#6e6e73] group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20 4H4c-1.103 0-2 .897-2 2v12c0 
              1.103.897 2 2 2h16c1.103 0 2-.897 
              2-2V6c0-1.103-.897-2-2-2zm0 
              2v.511l-8 5.01-8-5.01V6h16zM4 
              18V8.489l7.445 4.653a1 1 0 0 0 
              1.11 0L20 8.489V18H4z"/>
