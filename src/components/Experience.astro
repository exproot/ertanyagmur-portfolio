---
// src/components/Experience.astro
const { experience } = Astro.props;
---

<section class="section">
  <div class="container">
    <h2 class="section-title text-center mb-16">Experience</h2>

    <div class="relative">
      <!-- Vertical Line -->
      <div class="absolute left-[32px] top-0 bottom-0 w-px bg-gray-300 z-0" />

      <div class="space-y-16">
        {experience.map((item) => (
          <div class="flex items-start gap-6 relative z-10">
            <!-- Icon -->
            <div class="relative z-10 flex-shrink-0">
              <img src={`${import.meta.env.BASE_URL}${item.icon}`} alt={`${item.company} logo`}
                   class="w-16 h-16 object-contain bg-white shadow-md rounded-md" />
            </div>

            <!-- Content -->
            <div class="flex flex-col">
              <p class="text-xs text-neutral-500 mb-1">{item.date}</p>
              <h3 class="text-lg font-bold text-gray-900">
                {item.company} <span class="font-normal text-gray-600">â€“ {item.title}</span>
              </h3>
              <p class="text-gray-700 mt-2 leading-relaxed">{item.description}</p>
              <ul class="list-disc list-inside text-sm text-gray-700 mt-2 space-y-1">
                {item.achievements.map(point => <li>{point}</li>)}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
