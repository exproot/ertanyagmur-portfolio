---
// src/components/Projects.astro
import ScreenshotCarousel from './ScreenshotCarousel.astro';
const { projects } = Astro.props;
---

<section class="section bg-[#f5f5f7]">
  <div class="container">
    <h2 class="section-title text-center mb-16">Featured Projects</h2>

    <div class="space-y-24">
      {projects.map(project => (
        <div class="flex flex-col lg:flex-row bg-white rounded-3xl overflow-hidden shadow-[0_4px_24px_rgba(0,0,0,0.06)]">

          <!-- LEFT SIDE: Project Details -->
          <div class="flex-1 p-8 sm:p-10 lg:p-12 space-y-6 bg-white">
            <!-- Icon, Title -->
            <div class="flex items-center gap-4">

              <img src={`${import.meta.env.BASE_URL}${project.appIcon}`} alt={`${project.title} icon`} class="w-16 h-16 rounded-lg shadow-sm" />
              <div>
                <h3 class="text-xl font-semibold">{project.title}</h3>
                <p class="text-sm text-[#6e6e73]">{project.type}</p>
              </div>
            </div>

            <!-- Description -->
            <p class="text-base leading-relaxed">{project.description}</p>

            <!-- Tech Tags -->
            <div class="flex flex-wrap gap-2">
              {project.technologies.map(tech => (
                <span class="bg-[#f0f0f5] text-[#1d1d1f] px-3 py-1 text-xs rounded-full font-medium">
                  {tech}
                </span>
              ))}
            </div>

            <!-- Links -->
            <div class="flex flex-wrap gap-4 pt-3 items-center">
              {project.links?.appstore && (
                <a href={project.links.appstore} target="_blank" rel="noopener">
                  <img
                    src={`${import.meta.env.BASE_URL}assets/images/app-store-badge.png`}
                    alt="Download on the App Store"
                    width="150"
                    height="50"
                    class="hover:opacity-90 transition"
                  />
                </a>
              )}
              {project.links?.github && (
                <a href={project.links.github} target="_blank" class="btn bg-white border border-gray-300 text-sm px-4 py-2 rounded-full hover:bg-gray-100 transition">
                  View on GitHub
                </a>
              )}
            </div>
          </div>

          <!-- RIGHT SIDE: Screenshot Carousel -->
          <div class="flex-1 bg-[#f9f9fa] p-4 sm:p-6 lg:p-8 flex items-center justify-center">
            {project.screenshots && (
              <ScreenshotCarousel screenshots={project.screenshots} title={project.title} />
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
